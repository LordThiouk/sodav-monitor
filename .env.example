# Application
PORT=8000
API_PORT=8000
DEBUG=True
NODE_ENV=production
HOST=0.0.0.0
SECRET_KEY="your_secret_key"

# Database
DATABASE_URL="postgresql://user:password@host:port/dbname"
DATABASE_PUBLIC_URL=postgresql://user:password@localhost:5432/sodav
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="your_password"
POSTGRES_DB="railway"
POSTGRES_HOST="your_host"
POSTGRES_PORT="5432"

# Redis (for caching and WebSocket)
REDIS_URL="redis://localhost:6379"

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
UVICORN_LOG_LEVEL=info
NGINX_LOG_LEVEL=warn

# API Keys
ACOUSTID_API_KEY="your_acoustid_api_key"
AUDD_API_KEY="your_audd_api_key"

# MusicBrainz Configuration
MUSICBRAINZ_APP_NAME="sodav-monitor"

# Optional Audio Processing Settings
AUDIO_PROCESSING_ENABLED=True
AUDIO_PROCESSING_INTERVAL=30
AUDIO_PROCESSING_DURATION=10
AUDIO_PROCESSING_TIMEOUT=30
AUDIO_PROCESSING_RETRIES=3
AUDIO_PROCESSING_RETRY_DELAY=5
REQUEST_TIMEOUT=10
CHUNK_SIZE=8192
MAX_RETRIES=3
MIN_AUDIO_LENGTH=10
MAX_AUDIO_LENGTH=30
SAMPLE_RATE=44100
CHANNELS=2
MIN_CONFIDENCE=50
MIN_RHYTHM_STRENGTH=30
MIN_BASS_ENERGY=20
MIN_MID_ENERGY=15

# Startup configuration
STARTUP_GRACE_PERIOD=true
HEALTHCHECK_TIMEOUT=60
HEALTHCHECK_INTERVAL=30
HEALTHCHECK_RETRIES=3
HEALTHCHECK_START_PERIOD=180

# CORS settings
ALLOWED_ORIGINS=http://localhost:3000,https://sodav-monitor-production.up.railway.app 